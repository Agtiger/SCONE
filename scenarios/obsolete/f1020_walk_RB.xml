<?xml version="1.0" encoding="utf-8"?>
<Optimizer type="CmaOptimizer">
	<INCLUDE file="optimizations/O_CMA.xml" merge_children="1"/>
	<Objective type="SimulationObjective">
		<signature_postfix>RB1</signature_postfix>
		<max_duration>10</max_duration>
		<Model type="Simbody">
			<model_file>f1020m.osim</model_file>
			<state_init_file>f2354_init_walk_3_S10.sto</state_init_file>
			<state_init_optimization include_states="*" exclude_states="*_tx;*_ty;*_u" init_std="0.01" min="-0.5" max="0.5"/>
			<integration_method>SemiExplicitEuler2</integration_method>
			<integration_accuracy>0.001</integration_accuracy>
			<use_fixed_control_step_size>1</use_fixed_control_step_size>
			<fixed_control_step_size>0.001</fixed_control_step_size>
			<sensor_delay_scaling_factor>1.0</sensor_delay_scaling_factor>
			<Controllers>
				<Controller type="GaitStateController">
					<stance_load_threshold init_mean="0.1" init_std="0.01" min="0.001" max="1.0" is_free="1"/>
					<swing_load_threshold init_mean="0.001" init_std="0.001" min="0.001" max="1.0" is_free="1"/>
					<leg_load_sensor_delay>0.02</leg_load_sensor_delay>
					<landing_threshold init_mean="0.05" init_std="0.01" min="-0.1" max="0.5" is_free="1"/>
					<late_stance_threshold init_mean="0.0" init_std="0.01" min="-0.5" max="0.1" is_free="1"/>
					<ConditionalControllers>

						<!-- TA stretch reflexes, present during all states, based on [Geyer & Herr 2010]  -->
						<ConditionalController states="EarlyStance LateStance Liftoff Swing Landing">
							<Controller type="ReflexController" use_symmetric_actuators="1">
								<Reflexes>
									<Reflex type="MuscleReflex" target="tib_ant" delay="0.020">
										<KL init_mean="3.0" init_std="0.3" min="-10" max="10" is_free="1"/>
										<L0 init_mean="0.7" init_std="0.07" min="0" max="2" is_free="1"/>
									</Reflex>
									<Reflex type="MuscleReflex" target="tib_ant" source="soleus" delay="0.020">
										<KF init_mean="-0.4" init_std="0.04" min="-10" max="10" is_free="1"/>
									</Reflex>
								</Reflexes>
							</Controller>
						</ConditionalController>
						
						<!-- GAS + SOL F+ reflexes [Geyer & Herr 2010] -->
						<ConditionalController states="EarlyStance LateStance Liftoff">
							<Controller type="ReflexController" use_symmetric_actuators="1">
								<Reflexes>
									<Reflex type="MuscleReflex" target="soleus" delay="0.020">
										<KF init_mean="1.0" init_std="0.1" min="0.0" max="10.0" is_free="1"/>
									</Reflex>
									<Reflex type="MuscleReflex" target="gastroc" delay="0.020">
										<KF init_mean="1.0" init_std="0.1" min="0.0" max="10.0" is_free="1"/>
									</Reflex>
								</Reflexes>
							</Controller>
						</ConditionalController>
						
						<!-- Hip flexor reflexes, based on [Geyer & Herr 2010] -->
						<ConditionalController states="Liftoff Swing Landing">
							<Controller type="ReflexController" use_symmetric_actuators="1">
								<Reflexes>
									<Reflex type="MuscleReflex" target="iliopsoas" delay="0.005">
										<KL	init_mean="0.5" init_std="0.05" min="0.0" max="10.0" is_free="1"/>
										<L0 init_mean="0.65" init_std="0.065" min="0" max="2" is_free="1"/>
									</Reflex>
									<!-- Balance hip correction during swing, inspired by [Yin et al. 2007] -->
									<Reflex type="DofReflex" target="iliopsoas" source="lumbar_extension" delay="0.01">
										<KP init_mean="1.0" init_std="0.05" min="-10" max="10" is_free="1"/>
										<KV init_mean="0.5" init_std="0.05" min="-10" max="10" is_free="1"/>
									</Reflex>
								</Reflexes>
							</Controller>						
						</ConditionalController>
						
						<!-- Swing retraction during landing, based on [Geyer & Herr 2010] -->
						<ConditionalController states="Landing">
							<Controller type="ReflexController" use_symmetric_actuators="1">
								<Reflexes>
									<!-- L- retraction on hip flexor -->
									<Reflex type="MuscleReflex" target="iliopsoas" source="hamstrings" delay="0.005">
										<KL	init_mean="-4.0" init_std="0.4" min="-10" max="10" is_free="1"/>
										<L0 init_mean="0.85" init_std="0..085" min="0" max="2" is_free="1"/>
									</Reflex>
									<!-- F+ retraction reflex on hip extensors -->
									<Reflex type="MuscleReflex" target="hamstrings" delay="0.005">
										<KF init_mean="0.62" init_std="0.065" min="-10" max="10" is_free="1"/>
									</Reflex>
									<Reflex type="MuscleReflex" target="glut_max" delay="0.005">
										<KF init_mean="0.5" init_std="0.05" min="-10" max="10" is_free="1"/>
									</Reflex>
								</Reflexes>
							</Controller>						
						</ConditionalController>
						
						<!-- Stance reflexes -->
						<ConditionalController states="EarlyStance LateStance">
							<Controller type="ReflexController" use_symmetric_actuators="1">
								<Reflexes>
									<Reflex type="MuscleReflex" target="vasti" delay="0.010">
										<KL init_mean="1.0" init_std="0.1" min="0.0" max="10.0" is_free="1"/>
										<C0 init_mean="0.3" init_std="0.03" min="-1.0" max="1.0" is_free="1"/>
									</Reflex>
								</Reflexes>
							</Controller>						
						</ConditionalController>
						
						<!-- Upper body balance, inspired by [Yin et al. 2007, Geijtenbeek et al. 2013] -->
						<ConditionalController states="EarlyStance LateStance">
							<Controller type="ReflexController" use_symmetric_actuators="1">
								<!-- Pelvic stability -->
								<Reflexes>
									<Reflex type="DofReflex" target="hamstrings" source="pelvis_tilt" delay="0.005">
										<KP init_mean="1.0" init_std="0.1" min="-10" max="10" is_free="1"/>
										<KV init_mean="0.2" init_std="0.02" min="-10" max="10" is_free="1"/>
										<C0 init_mean="0.05" init_std="0.005" min="-1.0" max="1.0" is_free="1"/>
									</Reflex>
									<Reflex type="DofReflex" target="glut_max" source="pelvis_tilt" delay="0.005">
										<KP init_mean="1.0" init_std="0.1" min="-10" max="10" is_free="1"/>
										<KV init_mean="0.2" init_std="0.02" min="-10" max="10" is_free="1"/>
										<C0 init_mean="0.05" init_std="0.005" min="-1.0" max="1.0" is_free="1"/>
									</Reflex>
									<Reflex type="DofReflex" target="iliopsoas" source="pelvis_tilt" delay="0.005">
										<KP init_mean="-1.0" init_std="0.1" min="-10" max="10" is_free="1"/>
										<KV init_mean="-0.2" init_std="0.02" min="-10" max="10" is_free="1"/>
										<C0 init_mean="0.05" init_std="0.005" min="-1.0" max="1.0" is_free="1"/>
									</Reflex>
									<!-- Upper body stability -->
									<Reflex type="DofReflex" target="intobl" source="lumbar_extension" delay="0.005">
										<KP init_mean="-0.5" init_std="0.05" min="-10" max="10" is_free="1"/>
										<KV init_mean="-0.5" init_std="0.01" min="-10" max="10" is_free="1"/>
										<C0 init_mean="0.05" init_std="0.005" min="-1.0" max="1.0" is_free="1"/>
									</Reflex>
									<Reflex type="DofReflex" target="ercspn" source="lumbar_extension" delay="0.005">
										<KP init_mean="1.0" init_std="0.05" min="-10" max="10" is_free="1"/>
										<KV init_mean="0.5" init_std="0.01" min="-10" max="10" is_free="1"/>
										<C0 init_mean="0.05" init_std="0.005" min="-1.0" max="1.0" is_free="1"/>
									</Reflex>
								</Reflexes>
							</Controller>						
						</ConditionalController>
						
					</ConditionalControllers>
				</Controller>
				<INCLUDE file="measures/M_CG10_CoT.xml"/>
			</Controllers>
		</Model>
	</Objective>
</Optimizer>
