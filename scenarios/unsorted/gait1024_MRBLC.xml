<?xml version="1.0" encoding="utf-8"?>
<Optimizer type="CmaOptimizer">
	<INCLUDE file="optimizations/O_CMA.xml" merge_children="1"/>
	<Objective type="SimulationObjective">
		<signature_postfix>MRBLC9</signature_postfix>
		<max_duration>5</max_duration>
		<Model type="Simbody">
			<model_file>f1024cs7.osim</model_file>
			<state_init_file>f2354_init_walk_2_S12.sto</state_init_file>
			<sensor_delay_scaling_factor>1.0</sensor_delay_scaling_factor>
			<integration_method>SemiExplicitEuler2</integration_method>
			<integration_accuracy>0.001</integration_accuracy>
			<use_fixed_control_step_size>1</use_fixed_control_step_size>
			<fixed_control_step_size>0.001</fixed_control_step_size>
			<custom_properties>
				<meta_reflex_control use_length="1" use_constant="1" use_force="1" use_stiffness="1" use_balance="1"/>
			</custom_properties>
			<balance_sensor_delay>0.0</balance_sensor_delay>
			<balance_sensor_ori_vel_gain init_mean="0.1" init_std="0.01" min="0" max="1" is_free="1"/>
			
			<Controllers>
				<Controller type="GaitStateController">
					<landing_threshold init_mean="0.1" init_std="0.01" min="-0.5" max="0.5" is_free="1"/>
					<stance_load_threshold init_mean="0.05" init_std="0.01" min="0.001" max="1.0" is_free="1"/>
					<swing_load_threshold init_mean="0.05" init_std="0.01" min="0.001" max="1.0" is_free="1"/>
					<leg_load_sensor_delay>0.02</leg_load_sensor_delay>
					<ConditionalControllers>
					
						<!-- Hip and knee stance, upper body posture -->
						<ConditionalController states="EarlyStance LateStance">
							<Controller type="MetaReflexController">
								<Reflexes>
									<Reflex type="MetaReflex" target="lumbar_extension" delay="0.005">
										<len init_mean="2.0" init_std="0.1" min="0" max="10" is_free="1"/>
										<con init_mean="0.0" init_std="0.01" min="-1" max="1" is_free="1"/>
										<Balance>
											<con init_mean="-0.5" init_std="0.1" min="-10" max="10" is_free="1"/>
										</Balance>
									</Reflex>
									<Reflex type="MetaReflex" target="hip_flexion" delay="0.005">
										<len init_mean="0.1" init_std=".01" min="0" max="10" is_free="1"/>
										<con init_mean="0.0" init_std="0.01" min="-1" max="1" is_free="1"/>
										<Balance>
											<con init_mean="0.5" init_std="0.1" min="-10" max="10" is_free="1"/>
										</Balance>
									</Reflex>
									<Reflex type="MetaReflex" target="knee_angle" delay="0.010">
										<len init_mean="2.0" init_std="0.2" min="0" max="10" is_free="1"/>
										<con init_mean="-0.1" init_std="0.01" min="-10" max="10" is_free="1"/>
									</Reflex>
								</Reflexes>
							</Controller>
						</ConditionalController>
						
						<!-- Ankle push-off during late stance / liftoff -->
						<ConditionalController states="LateStance Liftoff">
							<Controller type="MetaReflexController">
								<Reflexes>
									<Reflex type="MetaReflex" target="ankle_angle" delay="0.020">
										<len init_mean="0.5" init_std="0.01" min="0" max="10" is_free="1"/>
										<con init_mean="-0.3" init_std="0.1" min="-10" max="10" is_free="1"/>
									</Reflex>
								</Reflexes>
							</Controller>
						</ConditionalController>
						
						<!-- Hip and knee liftoff/swing -->
						<ConditionalController states="Liftoff Swing">
							<Controller type="MetaReflexController">
								<Reflexes>
									<Reflex type="MetaReflex" target="hip_flexion" delay="0.005">
										<len init_mean="1.0" init_std="0.1" min="0" max="10" is_free="1"/>
										<con init_mean="0.3" init_std="0.1" min="-1" max="1" is_free="1"/>
										<Balance>
											<con init_mean="0.1" init_std="0.05" min="-1" max="1" is_free="1"/>
										</Balance>
									</Reflex>
									<Reflex type="MetaReflex" target="knee_angle" delay="0.010">
										<len init_mean="0.01" init_std="0.001" min="0" max="1" is_free="1"/>
										<con init_mean="-0.2" init_std="0.02" min="-1" max="1" is_free="1"/>
									</Reflex>
								</Reflexes>
							</Controller>
						</ConditionalController>

						<!-- Ankle retraction during swing and landing -->
						<ConditionalController states="Swing, Landing EarlyStance">
							<Controller type="MetaReflexController">
								<Reflexes>
									<Reflex type="MetaReflex" target="ankle_angle" delay="0.020">
										<len init_mean="2.0" init_std="0.5" min="0" max="10" is_free="1"/>
										<con init_mean="0.2" init_std="0.02" min="-10" max="10" is_free="1"/>
									</Reflex>
								</Reflexes>
							</Controller>
						</ConditionalController>

						<!-- Landing -->
						<ConditionalController states="Landing">
							<Controller type="MetaReflexController">
								<Reflexes>
									<Reflex type="MetaReflex" target="hip_flexion" delay="0.005">
										<len init_mean="0.2" init_std="0.02" min="0.0" max="10.0" is_free="1"/>
										<con init_mean="0.0" init_std="0.1" min="-10" max="10" is_free="1"/>
										<Balance>
											<con init_mean="0.5" init_std="0.05" min="-10" max="10" is_free="1"/>
										</Balance>
									</Reflex>
									<Reflex type="MetaReflex" target="knee_angle" delay="0.010">
										<len init_mean="0.3" init_std=".01" min="0" max="10" is_free="1"/>
										<con init_mean="0.0" init_std="0.01" min="-10" max="10" is_free="1"/>
									</Reflex>
								</Reflexes>
							</Controller>
						</ConditionalController>
					</ConditionalControllers>
				</Controller>
				<INCLUDE file="measures/M_CG10_CoT.xml"/>
			</Controllers>
		</Model>
	</Objective>
</Optimizer>
